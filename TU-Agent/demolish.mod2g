use agentKnowledge as knowledge.
use tygron as actionspec.

order=linearall.

module demolish {
	
	% Takes the first building of the list of destroyable buildings
	% Destroys this building and deletes it of the list
	if bel(oldBuildings([building(BuildingID,A,B,C,D,E,F,MultiPolygon)|Tail]))
		then building_plan_demolish(BuildingID) + delete(oldBuildings([building(BuildingID,A,B,C,D,E,F,MultiPolygon)|Tail])) + insert(oldBuildings(Tail)) + insert(availableLandPolygon(MultiPolygon)).


}