use agentKnowledge as knowledge.
use tygron as actionspec.

order=linear.

module buildConstruction {
	% Build an education construction at an available place.
	% Repercept the relevant areas
	if bel(functions(Functions), member(['luxe variant',BuildingID,List],Functions), 
		relevant_areas(0,[[MultiPolygon, Area]|Tail]), randomFloor(Floors), greenspace(MultiPolygon2,1))
		then building_plan_construction(BuildingID, Floors, MultiPolygon) + get_relevant_areas(0, build, []) + 
			delete(greenspace(MultiPolygon2,1)) + insert(greenspace(MultiPolygon2,0)).
			
	if bel(functions(Functions), member(['luxe variant',BuildingID,List],Functions), 
		relevant_areas(0,[[MultiPolygon, Area]|Tail]), randomFloor(Floors))
		then building_plan_construction(BuildingID, Floors, MultiPolygon) + get_relevant_areas(0, build, []).
	
	%If theres no available land we need to adopt a goal to create some
	if not(bel(relevant_areas(0, MPList), not(empty(MPList))))
		then adopt(createLandToBuild).
}