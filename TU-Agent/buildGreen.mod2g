use agentKnowledge as knowledge.
use tygron as actionspec.

order=linearall.

module buildGreen {
	
	% Build trees at an available pleace
	% This place is the multypolygon of an demolished building.
	if bel(functions(Functions), member(['loofbomen',BuildingID,List],Functions), relevant_areas(0,[[MultiPolygon, Area]|Tail]))
		then building_plan_construction(BuildingID, 1, MultiPolygon) + get_relevant_areas(0, build, []).
		
	%If theres no available land we need to adopt a goal to create some
	if not(bel(relevant_areas(0, MPList), not(empty(MPList))))
		then adopt(createLandToBuild).
}