use agentKnowledge as knowledge.
use tygron as actionspec.

order=linear.

module buyLand {
	
	if bel(callIDAreaBuy(CallID)), not(bel(relevant_areas(CallID, _)))
		then get_relevant_areas(CallID, buy, [zones(3)]).
		
	if bel(callIDAreaBuy(CallID), relevant_areas(CallID, RelevantAreas), member([MultiPolygon, Area], RelevantAreas))
		then map_buy_land(MultiPolygon, 400) + get_relevant_areas(CallID, buy, [zones(3)]) + insert(landBought(MultiPolygon)).


}